<h1><% @products.each do |product| %></h1>
    <p><%= product.name %> | <%= number_to_currency product.price %>
    <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
    <% end %></p>
  <% end %>
  

